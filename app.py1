from flask import Flask
import os

app = Flask(__name__)

@app.route('/')
def home():
    mode = os.getenv("APP_MODE", "default")
    region = os.getenv("APP_REGION", "none")
    return f"Hello from Flask! Mode: {mode}, Region: {region}"

if __name__ == '__main__':
    app.run(host='0.0.0.0', port=8080)
